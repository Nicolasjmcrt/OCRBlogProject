{% extends 'common/backTemplate.php.twig' %}

{% block title %}

    <title>CoyoTech | Ajouter article</title>

{% endblock %}

{% block head %}

    {{parent()}}

{% endblock %}

{% block header %}

        {{parent()}}
	

{% endblock %}

{% block content %}

    <div class="container mb-5 mt-5">
        <div class="row pb-5">
            <div class="col pb-5">
                <h1 style="color:#fff; padding-top: 20px;" >Ajouter un article</h1>
                <form action="" enctype="multipart/form-data" method="POST" class="pt-3 pb-3" style="background-color: rgba(255, 255, 255, 0.9); padding-left: 10px; padding-right: 10px; border-radius: 10px;">
                    <div class="form-group">
                        <label for="title">Titre :</label>
                        <input type="text" class="form-control" name="title" id="title" placeholder="Titre de l'article...">
                    </div>
                    <div class="form-group">
                        <label for="intro">Châpo :</label>
                        <input type="text" class="form-control" name="intro" id="intro" placeholder="Châpo de l'article...">
                    </div>
                    <div class="form-group">
                        <label for="catchphrase">Phrase d'accroche :</label>
                        <input type="text" class="form-control" name="catchphrase" id="catchphrase" placeholder="Phrase d'accroche de l'article...">
                    </div>
                    <div class="form-group">
                        <label for="content">Contenu :</label>
                        <textarea class="form-control" name="content" id="content" placeholder="Contenu de l'article..."></textarea>
                        <script>
                            CKEDITOR.replace( 'content' );
                        </script>
                    </div>
                    <div class="form-group">
                        <input class="form-control-file" type="file" name="media" accept="image/png,image/jpeg">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="caption" placeholder="légende...">
                    </div>
                    <div class="form-group">
                        <p>Publication : <br />
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="publication" id="1" value="1" {% if article.publication == 1 %} checked {% endif %}>
                                <label class="form-check-label" for="1">Oui</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="publication" id="0" value="0" {% if article.publication == 0 %} checked {% endif %}>
                                <label class="form-check-label" for="0">Non</label>
                            </div>
                        </p>
                    </div>
                    <div class="form-group">
                        <label for="userId">Auteur :</label>
                        <select  class="form-control" id="userId" name="userId">
                          {% for user in user %}
                          <option value="{{ user.user_id }}" >{{ user.user_id }} - {{ user.first_name }}</option>
                          {% endfor %}
                        </select>
                      </div>
                    <div class="form-group">
                        <input type="hidden" name="articleId" value="{{ article.article_id }}">
                        <button type="submit" class="btn btn-save" name="valid-form">Créer l'article</button>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <a href="/blog-mvc/Article/Admin" type="button" class="btn" title="Retour à la liste des articles"><img class="backto-icon" src="/blog-mvc/assets/images/backto-icon.png" alt="Icone retour"></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>




{% endblock %}

{% block footer %}

    {{parent()}}

{% endblock %}

{% block scripts %}

    {{parent()}}
    <script type="text/javascript">
    $(document).ready(function(){
    /*fonction au clic de la classe btn-supp*/
      $('.trash-btn').click(function(){
      /*définition de la valeur à supprimer*/
        valsupp=$(this).attr('rel');
        /*défintion du titre*/
        titre=$(this).attr('title');
        /*titre à afficher en "strong" à l'apparition du modal*/
        $('.titre-user').html('<strong>'+titre+'</strong>');
        /*définition de l'url a afficher*/
        url='delete/'+valsupp;
        /*quand suppression confirmée, retour à l'url prédéfinie*/
        $('.btn-url-supp').attr('href',url);
      });
    });
    </script>

{% endblock %}